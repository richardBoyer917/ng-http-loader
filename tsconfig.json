{
    "compileOnSave": false,
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es2015",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        "outDir": "./dist/out-tsc",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}
